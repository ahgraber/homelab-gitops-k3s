---
# yamllint disable
apiVersion: v1
kind: Secret
metadata:
  name: vw2-secret
  namespace: vaultwarden
stringData:
  # secrets
  ADMIN_TOKEN: "${SECRET_VAULTWARDEN_TOKEN}"
  DATABASE_URL: "postgresql://vaultwarden:${SECRET_DB_USER_PWD}@vaultwarden-db.vaultwarden.svc.cluster.local:5432/vaultwarden"
  SMTP_USERNAME: "${SECRET_SMTP_USER}"
  SMTP_PASSWORD: "${SECRET_SMTP_PWD}"
  # other config
  DATA_FOLDER: "config"
  DOMAIN: https://vaultwarden-test.${SECRET_DOMAIN}
  SIGNUPS_ALLOWED: "false"
  SMTP_FROM_NAME: Vaultwarden
  SMTP_FROM: "noreply@mail.${SECRET_DOMAIN}"
  SMTP_HOST: in-v3.mailjet.com
  SMTP_PORT: 587
  SMTP_SSL: "true"
  TZ: "America/New_York"
  WEBSOCKET_ADDRESS: 0.0.0.0
  WEBSOCKET_ENABLED: true
  WEBSOCKET_PORT: 3012
