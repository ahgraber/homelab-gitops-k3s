[shell_environment_policy]
set = { KUBECONFIG = "./kubeconfig" }
# deny secret outputs
prefix_rule(pattern = ["kubectl", "get", "secret", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "--output"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "--output"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "-ojson"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "-ojson"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "-oyaml"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "-oyaml"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "-ojsonpath"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "-ojsonpath"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "-ogo-template"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "-ogo-template"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "--template"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "--template"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secret", "--template-file"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secrets", "--template-file"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "externalsecret", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "externalsecrets", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "clusterexternalsecret", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "clusterexternalsecrets", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secretstore", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "secretstores", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "clustersecretstore", "-o"], decision = "deny")
prefix_rule(pattern = ["kubectl", "get", "clustersecretstores", "-o"], decision = "deny")
# allog other information seeking
prefix_rule(pattern = ["kubectl", "get"], decision = "allow")
prefix_rule(pattern = ["kubectl", "describe"], decision = "allow")
prefix_rule(pattern = ["kubectl", "logs"], decision = "allow")
prefix_rule(pattern = ["kubectl", "top"], decision = "allow")
prefix_rule(pattern = ["kubectl", "events"], decision = "allow")
prefix_rule(pattern = ["kubectl", "api-resources"], decision = "allow")
prefix_rule(pattern = ["kubectl", "api-versions"], decision = "allow")
prefix_rule(pattern = ["kubectl", "cluster-info"], decision = "allow")
prefix_rule(pattern = ["kubectl", "version"], decision = "allow")
prefix_rule(pattern = ["kubectl", "explain"], decision = "allow")

prefix_rule(pattern = ["flux", "get"], decision = "allow")
prefix_rule(pattern = ["flux", "logs"], decision = "allow")
prefix_rule(pattern = ["flux", "check"], decision = "allow")
prefix_rule(pattern = ["flux", "tree"], decision = "allow")
prefix_rule(pattern = ["flux", "trace"], decision = "allow")
