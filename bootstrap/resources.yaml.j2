# Add bootstrap-only resources here (optional, e.g., external secrets).
# If you add resources, ensure they are safe to apply before Flux reconciles.
---
apiVersion: v1
kind: Secret
metadata:
  name: onepassword
  namespace: external-secrets
stringData:
  TOKEN: op://homelab/external-secrets.1password/OP_CONNECT_TOKEN
  1password-credentials.json: op://homelab/external-secrets.1password/OP_CREDENTIALS_JSON_B64

---
apiVersion: v1
kind: Secret
metadata:
  name: cloudflared-credentials
  namespace: network
stringData:
  TUNNEL_ID: op://homelab/network.cloudflared/TUNNEL_ID
  credentials.json: | # block pipe needed to render as string
    op://homelab/network.cloudflared/credentials.json

---
apiVersion: v1
kind: Secret
metadata:
  name: cluster-secrets
  namespace: cert-manager
stringData:
  SECRET_DOMAIN: op://homelab/shared.cluster-secrets/SECRET_DOMAIN
