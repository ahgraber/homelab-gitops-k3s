---
apiVersion: v1
kind: Secret
metadata:
    name: authelia
    namespace: security
    annotations:
        kustomize.toolkit.fluxcd.io/substitute: disabled
        reloader.stakater.com/match: "true"
stringData:
    AUTHELIA_AUTHENTICATION_BACKEND_LDAP_PASSWORD: ""
    AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET: ""
    # AUTHELIA_SESSION_SECRET: "" # Use Kyverno to create/rotate on deployment
    AUTHELIA_STORAGE_ENCRYPTION_KEY: ""
    AUTHELIA_LDAP_BASE_DN: ""
    AUTHELIA_LDAP_ADMIN_PASSWORD: ""
    # notification smtp settings
    SMTP_ADDRESS: ""
    SMTP_USERNAME: "${FASTMAIL_USERNAME}"
    SMTP_PASSWORD: "${FASTMAIL_APP_PASSWORD}"
    SMTP_SENDER: "Authelia <noreply@${SECRET_DOMAIN}>"
    # oidc
    AUTHELIA_IDENTITY_PROVIDERS_OIDC_HMAC_SECRET: "${AUTHELIA_OIDC_HMAC_SECRET}"
    OIDC_JWKS_KEY: |
      # -----BEGIN ... -----
      # ...
      # -----END ... -----
    # client secrets
    GRAFANA_OAUTH_CLIENT_DIGEST: ""
    KARAKEEP_OAUTH_CLIENT_DIGEST: ""
    MEALIE_OAUTH_CLIENT_DIGEST: ""
    MEMOS_OAUTH_CLIENT_DIGEST: ""
    MINIFLUX_OAUTH_CLIENT_DIGEST: ""
    WHOAMI_OAUTH_CLIENT_DIGEST: ""
