---
apiVersion: v1
kind: Secret
metadata:
  name: datasci-postgres-operator
  namespace: datasci
  annotations:
    reloader.stakater.com/match: "true"
type: Opaque
stringData:
  POSTGRES_HOST: "postgres-rw.datasci.svc.cluster.local"
  POSTGRES_USER: "postgres"
  POSTGRES_PASS: "${SECRET_DB_ROOT_PWD}"
  POSTGRES_DEFAULT_DATABASE: "postgres"
  POSTGRES_URI_ARGS: ""
  POSTGRES_CLOUD_PROVIDER: ""
