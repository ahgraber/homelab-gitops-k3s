# yamllint disable
apiVersion: v1
kind: Secret
metadata:
    name: alertmanager-notifiers
    namespace: monitoring
    annotations:
        reloader.stakater.com/match: "true"
type: Opaque
stringData:
    ### email settings
    SMTP_HOST: "${SMTP_SRV}"
    SMTP_PORT: "${SMTP_PORT}"
    SMTP_USER: "${SMTP_USER}"
    SMTP_PASSWORD: "${SMTP_PWD}"
    SMTP_AUTH_STRATEGY: "TLS"
    SMTP_FROM_EMAIL: "${SMTP_ADDRESS}"
