# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{bash,sh}]
indent_style = space
indent_size = 4

[*.csv]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
max_line_length = 240

[*.py]
indent_style = space
indent_size = 4

[*.tsv]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = space
indent_size = 4
